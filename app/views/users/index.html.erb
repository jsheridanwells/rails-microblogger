<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate%>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= get_gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "Are you sure you want to delete #{user.name}?" } %>
  <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate%>
